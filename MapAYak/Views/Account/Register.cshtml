@model RegisterViewModel
@{
    Layout = "_Layout_Account";
}

<h3 class="fw-bold mb-5">Create New Account</h3>

<form asp-controller="Account" asp-action="Register" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger d-flex"></div>

    <div class="form-outline mb-4">
        <input asp-for="Email" placeholder="example@example.com" class="form-control form-control-lg" />
        <label asp-for="Email" class="form-label"></label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
    </div>

    <div class="form-outline mb-4">
        <input asp-for="UserName" class="form-control form-control-lg" />
        <label asp-for="UserName" class="form-label"></label>
        <div><span asp-validation-for="UserName" class="text-danger"></span></div>
    </div>

    <div class="form-outline mb-4">
        <input asp-for="Password" placeholder="password" class="form-control form-control-lg" />
        <label asp-for="Password" class="form-label"></label>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
    </div>

    <div class="form-outline mb-4">
        <input asp-for="ConfirmPassword" placeholder="password" class="form-control form-control-lg" />
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
    </div>

    <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>

</form>

<hr class="my-4">

<div>Already have an account? <a asp-controller="Account" asp-action="SignIn">Sign In</a></div>
<a asp-controller="Home" asp-action="Index" class="small text-danger">Cancel</a>