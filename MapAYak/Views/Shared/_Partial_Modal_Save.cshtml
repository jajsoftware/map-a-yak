@model IMapLayer
@{
    var modalId = "saveRouteModal";
    var formId = "saveRouteForm";

    if (@Model is Location)
    {
        modalId = "saveLocationModal";
        formId = "saveLocationForm";
    }
}

<div id="@modalId" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Save <span data-bind="text: layerDescription"></span></h5>
                <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="@formId">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger d-flex"></div>
                    <div class="mb-3">
                        <label asp-for="Name" class="col-form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="col-form-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <div><span asp-validation-for="Description" class="text-danger"></span></div>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a onclick="layer.save()" class="btn btn-success">Save</a>
            </div>
        </div>
    </div>
</div>